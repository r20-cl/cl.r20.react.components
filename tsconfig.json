{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "strict": false,
    "outDir": "./dist/",
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
